<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/circle_color">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/me_setting"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"/>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/activity_every_ask_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"

        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/me_head"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/me_name"
                android:text="请登陆"
                android:textSize="16sp"
                android:textColor="@color/deep_gray"
                android:layout_toRightOf="@id/me_head"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/v_normal"
            android:layout_toRightOf="@id/me_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/me_name"
            android:layout_toRightOf="@id/me_head"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/deep_gray"/>
        <!--动态、点赞-->
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:paddingLeft="15dp">
     <RelativeLayout
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:layout_weight="1"
         android:gravity="center"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="动态"
             android:textSize="16sp"
             android:gravity="center_horizontal"
             android:layout_centerHorizontal="true"
             android:textColor="@color/deep_gray"
             android:id="@+id/me_trends"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="0"
             android:id="@+id/me_trends_count"
             android:layout_centerHorizontal="true"
             android:layout_below="@id/me_trends"
             android:textSize="15sp"/>
         <View
             android:layout_width="0.7dp"
             android:layout_height="40dp"
             android:layout_centerVertical="true"
             android:background="@color/shade_gray"
             android:layout_toRightOf="@id/me_trends_count"
             android:layout_marginLeft="30dp"/>
     </RelativeLayout>
<!--粉丝-->
     <RelativeLayout
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:layout_weight="1"
         android:gravity="center"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="粉丝"
             android:textSize="16sp"
             android:gravity="center_horizontal"
             android:layout_centerHorizontal="true"
             android:textColor="@color/deep_gray"
             android:id="@+id/me_fans"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="0"
             android:id="@+id/me_fans_count"
             android:layout_centerHorizontal="true"
             android:layout_below="@id/me_fans"
             android:textSize="15sp"/>
         <View
             android:layout_width="0.7dp"
             android:layout_height="40dp"
             android:layout_centerVertical="true"
             android:background="@color/shade_gray"
             android:layout_toRightOf="@id/me_fans_count"
             android:layout_marginLeft="30dp"/>
     </RelativeLayout>
     <!--点赞-->
     <RelativeLayout
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:layout_weight="1"
         android:gravity="center"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="点赞"
             android:textSize="16sp"
             android:gravity="center_horizontal"
             android:layout_centerHorizontal="true"
             android:textColor="@color/deep_gray"
             android:id="@+id/me_love"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="0"
             android:id="@+id/me_love_count"
             android:layout_centerHorizontal="true"
             android:layout_below="@id/me_love"
             android:textSize="15sp"/>
         <View
             android:layout_width="0.7dp"
             android:layout_height="40dp"
             android:layout_centerVertical="true"
             android:background="@color/shade_gray"
             android:layout_toRightOf="@id/me_love_count"
             android:layout_marginLeft="30dp"/>
     </RelativeLayout>

     <!--勋章-->

     <RelativeLayout
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:layout_weight="1"
         android:gravity="center"
         >
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/me_medal"
             android:layout_centerHorizontal="true"
             android:src="@drawable/medal"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="0"
             android:id="@+id/me_medal_count"
             android:layout_centerHorizontal="true"
             android:layout_below="@id/me_medal"
             android:textSize="15sp"/>
     </RelativeLayout>

 </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/activity_every_ask_color">
        <!--我的圈子-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:id="@+id/me_circle_img"
                android:layout_centerVertical="true"
                android:src="@drawable/me_circle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/me_circle_img"
                android:text="我的圈子"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="@color/deep_gray"
                android:layout_marginLeft="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/deep_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <!--我的收藏-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:id="@+id/me_collection_img"
                android:layout_centerVertical="true"
                android:src="@drawable/me_collection"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/me_collection_img"
                android:text="我的收藏"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="@color/deep_gray"
                android:layout_marginLeft="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/deep_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <!--我的活动-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:id="@+id/me_activity_img"
                android:layout_centerVertical="true"
                android:src="@drawable/me_activity"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/me_activity_img"
                android:text="我的活动"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="@color/deep_gray"
                android:layout_marginLeft="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/deep_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

<!--个人信息-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:id="@+id/me_info_img"
                android:layout_centerVertical="true"
                android:src="@drawable/me_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/me_info_img"
                android:text="个人信息"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="@color/deep_gray"
                android:layout_marginLeft="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/deep_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>





    </LinearLayout>

</LinearLayout>